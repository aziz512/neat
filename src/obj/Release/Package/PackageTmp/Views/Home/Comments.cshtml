@model List<News.Models.Comment>
@using News.Models;
@{
    ViewBag.Title = "Comments";
}

<h2>Comments</h2>
@if (Model != null)
{
    string template = HelpingMethods.getTemplateValue("comment");
    foreach (var comment in Model)
    {
        template = template.Replace("{{Author}}",comment.AuthorName);
        template = template.Replace("{{Date}}", comment.Date.Month + "/" + comment.Date.Date + "/" + comment.Date.Year);
        template = template.Replace("{{Content}}", comment.Content);
        template = template.Replace("{{Id}}", comment.Id.ToString());
        template = template.Replace("{{NewsId}}", comment.NewsId.ToString());

        @:template
