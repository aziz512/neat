@model News.Models.User

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm()) {
    <p class="validation-summary">
        @if (ViewBag.Errors != null)
        {
            foreach (string item in (List<string>)ViewBag.Errors)
            {
                @item
            }
        }
        @Html.ValidationSummary()
    </p>
    <p>Username*: @Html.TextBoxFor(x => x.Username)</p>
    <p>Password*: @Html.PasswordFor(x => x.Password)</p>
    <p>First Name: @Html.TextBoxFor(x => x.FirstName)</p>
    <p>Last Name: @Html.TextBoxFor(x => x.LastName)</p>
    <p>Email*: @Html.TextBoxFor(x => x.Email)</p>
    <input type="submit" value="Register"/>
}

