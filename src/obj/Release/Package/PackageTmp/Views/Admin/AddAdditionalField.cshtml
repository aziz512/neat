@model News.Models.AddField
@{
    ViewBag.Title = "AddAdditionalField";
}

<h2>Add Additional Field</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    if ((ViewBag.Errors as List<string>) != null)
    {
        <ul>
            @foreach (var item in ViewBag.Errors as List<string>)
            {
                <li>@item</li>
            }
        </ul>
    }
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Name (only letters, numbers or underscore)", htmlAttributes: new { @class = "col-md-2 control-label", style = "text-align:left;padding-top:7px;" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Title, "Title(displayed name)", htmlAttributes: new { @class = "col-md-2 control-label", style = "text-align:left;padding-top:7px;" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DefaultValue, "Default value", htmlAttributes: new { @class = "col-md-2 control-label", style = "text-align:left;padding-top:7px;" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.DefaultValue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DefaultValue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Categories, "Categories", htmlAttributes: new { @class = "col-md-2 control-label", style = "text-align:left;padding-top:7px;" })
            <div class="col-md-3">
                @Html.ListBoxFor(x => x.Categories, (IEnumerable<SelectListItem>)ViewBag.CategoriesList, new {@class= "form-control" })
                @Html.ValidationMessageFor(model => model.Categories, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Type, "Type", htmlAttributes: new { @class = "col-md-2 control-label", style = "text-align:left;padding-top:7px;" })
            <div class="col-md-3">
                @Html.DropDownListFor(x => x.Type, new List<SelectListItem>() {
                    new SelectListItem (){ Text = "Text box", Value = "textbox"},
                    new SelectListItem (){ Text = "Text area", Value = "textarea"}}, new {@class= "form-control" })
                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Add" class="btn"/>
            </div>
        </div>
    </div>
    
    
    
}
